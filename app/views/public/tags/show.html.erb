<main class="row justify-content-center col-12 mx-auto py-5">
  <div class="sidebar col-12 col-md-4 mb-4">
    <!-- サイドバーの内容をここに追加 -->
  </div>
  <div class="menu col-12 col-md-6 justify-content-center">
    <%= @tag.name %>
    <h4>（全<%= @posts.count %>件）</h4>
    <% @posts.each do |post| %>
      <div class="item card-list-container col-12 m-0.5 pb-5">
        <%= link_to community_post_path(community_id: post.community.id, id: post.id), class: "text-decoration-none" do %>
          <h6 class="card-title text-dark mb-3"><%= post.title %></h6>
          <!-- その他のコンテンツをここに追加 -->
        <% end %>
      </div>
    <% end %>
  </div>
</main>