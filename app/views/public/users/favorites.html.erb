<div class="container">
  <table class='table'>
    <thead>
      <tr>
        <h3>いいね一覧</h3>
        <th>いいね</th>
        <th>投稿</th>
        <th>投稿内容</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @favorite_posts.each do |post| %>
        <tr>
          <td id="favorite_btn_<%= post.id %>"><%= render '/public/favorites/btn', post: post %></td>
          <td><%= link_to post.title, community_post_path(post.community_id, post.id) %></td>
          <td><%= post.body %></td>
          <td>
            <% if post.user == current_user %>
              <%= link_to "削除", community_post_path(post.community_id, post.id), method: :delete, "data-confirm" => "削除しますか?", class: "btn btn-danger" %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>