<table class='table'>
  <thead>
    <tr>
      <th>日時</th>
      <th>氏名</th>
      <th>届け出</th>
      <th>内容</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @notifications.each do |notification| %>
      <tr>
        <td><%= notification.created_at.strftime('%Y-%m-%d %H:%M') %></td>
        <td><%= notification.user.full_name %></td>
        <td><%= notification.name %></td>
        <td><%= notification.introduction %></td>
        <% if notification.user == current_user %>
          <td><%= link_to '編集', edit_notification_path(notification), class: "notification_#{notification.id} btn btn-success" %></td>
          <td><%= link_to "削除", notification_path(notification), method: :delete, "data-confirm" => "削除しますか?", class: "btn btn-danger" %></td>
        <% else %>
          <td></td>
          <td></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>