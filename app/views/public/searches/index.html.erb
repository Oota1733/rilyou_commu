<div class='container px-5 px-sm-0'>

  <h2>Posts search for "<%= @word %>"</h2>
    <thead>
      <tr>

        <th>本文</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.body %></td>
        </tr>
      <% end %>


   </tbody>
</div>