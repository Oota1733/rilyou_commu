<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

      <h4>通知</h4>
        <% if @notices.present? %>
          <%= link_to "全削除", notice_path, method: :delete, class: "btn btn-light" %>
          <% @notices.each do |notice| %>
              <%= render "own_post", notice: notice %>
          <% end %>
        <% else %>
          通知はありません
        <% end %>
    </div>
  </div>
</div>