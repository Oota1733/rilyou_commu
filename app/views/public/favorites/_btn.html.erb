<% if post.favorited_by?(current_user) %>
  <% favo_id = Favorite.find_by(user_id: current_user, post_id: post.id) %>
  <%= link_to community_post_favorite_path(post.community, post, favo_id), method: :delete do %>
    <i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
    <%= post.favorites.count %> いいね
  <% end %>
<% else %>
  <%= link_to community_post_favorites_path(post.community, post), method: :post do %>
    <i class="fas fa-heart" aria-hidden="true"></i>
    <%= post.favorites.count %> いいね
  <% end %>
<% end %>