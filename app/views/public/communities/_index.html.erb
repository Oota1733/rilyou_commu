<table class='table'>
  <thead>
    <tr>
      <th>グループ名</th>
      <th>紹介文</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @communities.each do |community| %>
      <tr>

        <td><%= link_to community.name,community_path(community) %></td>
        <td><%= community.introduction %></td>
        <% if community.user == current_user %>
          <td><%= link_to '編集', edit_community_path(community), class: "community_#{community.id} btn  btn-success" %></td>
          <td><%= link_to "削除", community_path(community), method: :delete, "data-confirm" => "削除しますか?", class: "btn btn-danger" %></td>
        <% else %>
          <td></td>
          <td></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>