<div class="container">

  <div class="row">
    <div class="m-4">
      <h4>届け出一覧</h4>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-10 mx-auto">
      <table class="table table-hover table-inverse">
        <tr>
          <th>氏名</th>
          <th>メールアドレス</th>
        </tr>

        <% @users.each do |user| %>
          <tr>
            <td><%= user.id %></td>
            <td><%= link_to user.full_name, admin_user_path(user) %></td>
            <td><%= user.email %></td>
            <td>
              <% if user.is_active %>
                <span class="text-success">有効</span>
              <% else %>
                <span class="text-secondary">退会</span>
              <% end %>
            </td>
          </tr>
        <% end %>
      </table>
      <%= paginate @users %>
    </div>
  </div>
</div>
