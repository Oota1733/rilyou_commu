<div class="container py-5">
  <div class="row">
    <div class="col-11 py-5 mx-auto">

      <h3>タグ一覧・追加</h3>

      <!--form部分-->
      <%=form_with model: @tag,url: admin_tags_path, method: :post do |f| %>
        <td><%= f.label :"タグ名", class: "mr-3" %></td>
        <td><%= f.text_field :name, class: "mr-5" %></td>
        <td><%= f.submit'新規登録',class: "btn btn-dark" %></td>
      <% end %>

      <!--ジャンル一覧-->
      <table class="table table-borderless">
        <div class="py-3">
          <thead>
            <tr>
              <th>タグ名</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
          <% @tags.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to "編集する", edit_admin_tag_path(genre.id), class: "btn btn-sm btn-dark" %></td>
            </tr>
          <%end%>
          </tbody>
        </div>
      </table>
    </div>
  </div>
</div>